{
  "extends": "./kausal_common/configs/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@common/*": ["./kausal_common/src/*"]
    },
    "strictNullChecks": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "./*.mjs",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules", "embed"]
}
