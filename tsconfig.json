{
  "extends": "./kausal_common/configs/tsconfig.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/public/*": ["./public/*"],
      "@/*": ["./src/*"],
      "@common/*": ["./kausal_common/src/*"]
    },
    "strictNullChecks": true
  },
  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.js",
    "src/**/*.jsx",
    ".storybook/*.tsx",
    ".storybook/*.ts",
    "stories/**/*.ts",
    "stories/**/*.tsx",
    "./*.mjs",
    "./*.cjs",
    "./*.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules", "src/embed", ".storybook", "stories"]
}
